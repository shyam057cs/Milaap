<h2>Register as a Donor:</h2>
<%= form_for([@campaign, @campaign.donors.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </div>  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
